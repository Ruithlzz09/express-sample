{
  "name": "express-sample",
  "version": "1.0.1",
  "description": "It is simple express REST Api Project with testing support",
  "main": "src/app.js",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "rm -rf node_modules && npm ci",
    "build:firstTime": "npm install",
    "cli-sample": "node src/utilites/sample.js",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "start": "NODE_ENV=production node src/app.js",
    "test": "mocha  tests/*.test.js  --timeout 250000 --exit --bail"
  },
  "keywords": [
    "express",
    "template",
    "mongodb",
    "project-template"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2"
  }
}
